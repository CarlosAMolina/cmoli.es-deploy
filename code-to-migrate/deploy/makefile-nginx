run: wait-nginx-is-listening

# TODO continue here
wait-nginx-is-listening:
	for !isNginxListening() {
	  sleep 5
	}

func isNginxListening() bool {
	# https://everything.curl.dev/usingcurl/returns
	curl -s http://localhost:8080 > /dev/null
	exit_status=$?
	if test "$exit_status" == "0" {
	  return true
	}
	else {
	  return false
	}
}
